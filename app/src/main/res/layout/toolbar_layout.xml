<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="?actionBarSize">    <ImageView        android:id="@+id/iv"        android:layout_width="40dp"        android:layout_height="40dp"        android:layout_centerVertical="true"        android:src="@drawable/base_drawable_music_next" />    <LinearLayout        android:id="@+id/ll_title"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_toRightOf="@+id/iv"        android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="0dp"            android:layout_weight="1"            android:padding="5dp"            android:text="Zhihu"            android:textColor="#000000"            android:textSize="15sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="0dp"            android:layout_weight="1"            android:padding="5dp"            android:text="sunst"            android:textSize="13sp" />    </LinearLayout>    <ImageView        android:id="@+id/iv2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_marginRight="10dp"        android:layout_toLeftOf="@+id/iv1"        android:src="@drawable/ic_drawable_delete" />    <ImageView        android:id="@+id/iv1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="10dp"        android:src="@drawable/base_drawable_add" /></RelativeLayout>