<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/ColorWhite"    android:orientation="vertical">    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btn_download"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:background="@color/colorPrimary"        android:drawableLeft="@drawable/ic_orange_arrow_down"        android:paddingLeft="20dp"        android:paddingRight="20dp"        android:text="Start Download"        android:textColor="@android:color/white" />    <ProgressBar        android:id="@+id/progress"        style="@style/Widget.AppCompat.ProgressBar.Horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/btn_download"        android:layout_marginTop="48dp" />    <TextView        android:id="@+id/progress_text"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/progress"        android:textAlignment="center" />    <Button        android:id="@+id/btnStartDownload"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="btnStartDownload"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <Button        android:id="@+id/btnPauseDownload"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="btnPauseDownload"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <Button        android:id="@+id/btnCancelDownload"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="btnCancelDownload"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" /></LinearLayout>