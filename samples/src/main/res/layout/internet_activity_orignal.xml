<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/an_dimen_padding"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="-16dp"
    tools:layout_editor_absoluteY="227dp">

    <LinearLayout
        style="@style/an_match_match.H"
        android:layout_marginTop="30dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/in_selector_em_button_login"
            android:text="1：原生Retrofit"
            android:textAllCaps="false"
            android:textSize="11sp" />

    </LinearLayout>

    <include layout="@layout/an_item_oneline" />

    <LinearLayout
        style="@style/an_match_wrap.H"
        android:weightSum="2">

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/in_selector_em_button_login"
            android:text="2：livery自带api"
            android:textAllCaps="false"
            android:textSize="11sp" />
    </LinearLayout>

    <include layout="@layout/an_item_oneline" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:background="?selectableItemBackground"
        android:lineSpacingMultiplier="1.5"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="数据:点击后请求\nhttps://github.com/qydq/idcardOCR"
        android:textColor="?android:attr/textColorPrimary"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/tvZfb"
        style="@style/an_match_wrap.Font"
        android:layout_marginLeft="@dimen/an_dimen_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/an_dimen_margin"
        android:background="@drawable/in_selector_em_button_register"
        android:text="检测是否安装支付宝"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvWx"
        style="@style/an_match_wrap.Font"
        android:layout_marginLeft="@dimen/an_dimen_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/an_dimen_margin"
        android:background="@drawable/in_selector_em_button_register"
        android:text="检测是否安装微信"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/httpUpload"
        style="@style/an_match_wrap.Font"
        android:layout_marginLeft="@dimen/an_dimen_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/an_dimen_margin"
        android:background="@drawable/in_selector_em_button_register"
        android:text="球球上传文件"
        android:textColor="#FFFFFF" />


    <ImageView
        android:id="@+id/ivPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgwan" />

</LinearLayout>