<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical"
    tools:context=".module.pager.TestControllerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="index:" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_index"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:selectAllOnFocus="true"
                android:text="0" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_addMessageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add message number" />

        <Button
            android:id="@+id/btn_subtraMessageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtra message number" />

        <Button
            android:id="@+id/btn_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove tab item" />

        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add tab item" />

        <com.sunsta.bear.layout.NoTouchViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.sunsta.livery.engine.PageNavigationView
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/pager_tab_background"
            android:elevation="8dp" />

    </LinearLayout>

</LinearLayout>