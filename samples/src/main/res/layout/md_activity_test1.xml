                    <ImageView
                        android:id="@+id/ivHead"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/ic_color_share_url"
                        app:layout_scrollFlags="scroll|enterAlways" />

                    <TextView
