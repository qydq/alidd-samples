<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/picture_icon_black_delete"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/an_dimen_native_list"
        android:layout_height="@dimen/an_dimen_native_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/img_aac"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/an_dimen_padding_left"
        android:layout_marginStart="@dimen/an_dimen_padding_left"
        android:layout_toEndOf="@id/iv_icon"
        android:layout_toLeftOf="@id/iv_touch"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_toStartOf="@id/iv_touch"/>

</RelativeLayout>