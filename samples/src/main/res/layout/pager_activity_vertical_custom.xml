<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_material_design"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".module.pager.VerticalCustomActivity">

    <ScrollView
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:background="@drawable/pager_tab_background"
        android:elevation="8dp">

        <com.sunsta.livery.engine.PageNavigationView
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <com.sunsta.bear.layout.NoTouchViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
