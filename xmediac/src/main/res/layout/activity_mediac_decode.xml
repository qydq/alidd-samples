<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_decode"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="@dimen/AppBarPatchMarginTop"
        android:background="@drawable/in_drawable_selector_shadow"
        android:stateListAnimator="@null"
        android:text="视频解码" />

    <Button
        android:id="@+id/btn_render"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/in_drawable_selector_md_shape"
        android:stateListAnimator="@null"
        android:text="视频播放" />

    <Button
        android:id="@+id/btn_audio_decode"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/in_drawable_selector_shadow"
        android:stateListAnimator="@null"
        android:text="音频解码" />

    <Button
        android:id="@+id/btn_audio_player"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/in_drawable_selector_md_shape"
        android:stateListAnimator="@null"
        android:text="音频播放" />

    <Button
        android:id="@+id/btn_play"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/em_button_login_bg"
        android:stateListAnimator="@null"
        android:text="音视频同步播放用C实现" />

    <Button
        android:id="@+id/btn_transcoding_compress"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/em_button_register_bg"
        android:stateListAnimator="@null"
        android:text="转码压缩" />

    <Button
        android:id="@+id/btn_addWatermark"
        style="@style/an_match_wrap.Font"
        android:layout_marginTop="10dp"
        android:background="@drawable/in_drawable_selector_shadow"
        android:stateListAnimator="@null"
        android:text="视频添加水印" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/an_match_wrap"
        android:text="FFmpegRenderActivity.java" />
</LinearLayout>
